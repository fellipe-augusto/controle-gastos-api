// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  cards     Card[]
  createdAt DateTime @default(now())
  role      Role     @default(USER)
}

model Card {
  id       String    @id @default(cuid())
  name     String
  bank     String
  user     User      @relation(fields: [userId], references: [id])
  userId   String
  expenses Expense[]
}

model Expense {
  id          String   @id @default(cuid())
  description String
  amount      Float
  date        DateTime // Data original da compra
  dueDate     DateTime // <-- ADICIONE ESTA LINHA. Data de competÃªncia da parcela.

  installment       Int
  totalInstallments Int

  responsible String

  card   Card   @relation(fields: [cardId], references: [id])
  cardId String

  purchaseId String
}
